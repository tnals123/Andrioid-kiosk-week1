<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textAlignment="center"
        android:textSize="24sp"

        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/myliner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <Button
            android:id="@+id/menulistbutton"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="menulist"></Button>

        <Button
            android:id="@+id/okbutton"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="확인"></Button>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/myliner"
        tools:layout_editor_absoluteX="0dp"></FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>